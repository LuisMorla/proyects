@model PaginaDeRegistros.Models.Registros

@{
    ViewBag.Title = "Eliminar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Eliminar</h2>

<div class="row" style="margin-top: 30px">

    <div class="col-sm-12">
        <div class="panel panel-warning">
            <div class="panel-heading">
                <h4>Eliminar contacto</h4>
            </div>
            <div class="panel-body">
                <div class="alert alert-danger">
                    ¿Desea eliminar el contacto: @Html.DisplayTextFor(m=>m.Nombre) @Html.DisplayTextFor(m=>m.Apellidos) ?
                </div>

                <form action="@Url.Action("Eliminar","Contacto")" method="post">
                    <input type="hidden" class="form-control" name="ID" value="@Html.DisplayTextFor(m=>m.ID)"/>

                    <button type="submit" class="btn btn-danger">Guardar</button>
                    <a class="btn btn-warning" href="@Url.Action("Register","Contacto")">Volver</a>
                </form>

            </div>
        </div>
    </div>

</div>

