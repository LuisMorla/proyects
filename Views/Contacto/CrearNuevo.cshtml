@model PaginaDeRegistros.Models.Registros

@{
    ViewBag.Title = "CrearNuevo";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Crear Nuevo</h2>

<div class="row" style="margin-top: 30px">

    <div class="col-sm-12">
        <div class="panel panel-warning">
            <div class="panel-heading">
                <h4>Nuevo contacto</h4>
            </div>
            <div class="panel-body">
                <form action="@Url.Action("CrearNuevo","Contacto")" method="post">
                    <div class="form-group">
                        <label form="txtnombre">Cedula</label>
                        <input type="text" class="form-control" name="Cedula" />

                    </div>
                    <div class="form-group">
                        <label form="txtnombre">Nombre</label>
                        <input type="text" class="form-control" name="Nombre" />

                    </div>
                    <div class="form-group">
                        <label form="txtnombre">Apellidos</label>
                        <input type="text" class="form-control" name="Apellidos" />

                    </div>
                    <button type="submit" class="btn btn-primary">Registrar</button>
                    <a class="btn bnt-warning" href="@Url.Action("Register","Contacto")">Volver</a>
                    <hr />
                </form>

            </div>
        </div>
    </div>

</div>
